[colors]
; Main bar color
background = #222222           
background-alt = #444       
foreground = #dfdfdf        
foreground-alt = #555       

; Current workspace color; Also need to change this color in ~/scripts/bar.sh
primary = #01ab84           
secondary = #e60053         
alert = #ff3333             

[bar/main]
bottom = true
monitor = DisplayPort-0
width = 100%
height = 30
